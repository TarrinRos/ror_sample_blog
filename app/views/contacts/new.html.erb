<h1>Contact us</h1>

<%= form_for :contact, url: contacts_path do |f| %>
  <p>
    <%= f.label :email %> <br>
<!--input field -->
   <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :message %> <br>
<!--text area -->
   <%= f.text_area :message %>
  </p>
  <p>
    <%= f.submit 'Send message' %>
  </p>
<% end %>
