<h2>Edit article</h2>
<% if user_signed_in? %>
<%= form_for :article, url: article_path(@article), method: :put do |f| %>
<% if @article && @article.errors.any? %>
<p>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
</p>
<% end %>
  <p>
    <%= f.label :title %> <br>
<!--input field -->
   <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :text %> <br>
<!--text area -->
   <%= f.text_area :text %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
<% else %>
<%= link_to 'Please sign in', new_user_session_path %>
<% end %>
