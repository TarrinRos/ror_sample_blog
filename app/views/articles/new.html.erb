<h1>New article</h1>

<%= form_for :article, url: articles_path do |f| %>
<% if @article && @article.errors.any? %>
<p>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
</p>
<% end %>
  <p>
    <%= f.label :title %> <br>
<!--input field -->
   <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :text %> <br>
<!--text area -->
   <%= f.text_area :text %>
  </p>
  <p>
    <%= f.submit class: "btn btn-outline-info", type: "submit", value: "Save article" %>
  </p>
<% end %>
