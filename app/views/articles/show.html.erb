<h1><%= @article.title %></h1>

<p><%= @article.text %></p>

<p>
<%= form_for([@article, @article.comments.build]) do |f| %>
<p>
  <%= f.label :author%> <br>
<!--input field -->
 <%= f.text_field :author %>
</p>
<p>
  <%= f.label :body %> <br>
<!--text area -->
 <%= f.text_area :body %>
</p>
<p>
  <%= f.submit %>
</p>
<% end %>
</p>
