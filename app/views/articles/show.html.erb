<h1><%= @article.title %></h1>

<p><%= @article.text %></p>

<p>
  <h4>Comments:</h4>
  <% @article.comments.each do |c| %>
  <hr>
  <p style="font-style: italic; font-weight: bolder"><%= c.author %>:</p>
  <p><%= c.body %></p>
  <% end %>
</p>


<% if user_signed_in? %>
<p>
  <%= form_for([@article, @article.comments.build]) do |f| %>
  <hr>
<h4>Add Comment:</h4>
  <p>
    <%= f.label :author %> <br>
  <!--input field -->
   <%= f.text_field :author %>
  </p>
  <p>
    <%= f.label :body %> <br>
  <!--text area -->
   <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
  <% end %>
  <% else %>
  For comments please
  <%= link_to 'Sign In', new_user_session_path %>
<% end %>
</p>
